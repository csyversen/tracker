<!DOCTYPE html>
<html>
<head>
  <title>Tracker</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navbar">
      <div class="container">
        <ul class="nav navbar-nav">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Login", root_path %></li>
          <li class="<%= 'active' if current_page?(tracking_menu_path) %>"><%= link_to("Products", {:controller => "tracking", :action => "menu"}) %></li>
          <li class="<%= 'active' if current_page?(auth_logout_path) %>"><%= link_to("Logout", {:controller => "auth", :action => "logout"}) %></li>
        </ul>
      </div>
    </div>

    <div>
      <div class="container">
      <% if !flash[:notice].blank? %>
        <div class="<%= flash[:flash_class] %>">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% end %>
    </div>
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>