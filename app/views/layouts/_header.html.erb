<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <nav>
        <ul class="nav">
          <% if logged_in? %>
            <li><%= link_to "Home/Users", current_user %></li>
            <li class="<%= 'active' if current_page?(logout_path) %>"><%= link_to("Logout", logout_path, method: "delete") %></li>
          <% else %>
            <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Login", root_path %></li>
          <% end %>
          <li class="<%= 'active' if current_page?(products_path) %>"><%= link_to("Products", products_path) %></li>
        </ul>
      <nav>
    </div>
  </div>
</header>