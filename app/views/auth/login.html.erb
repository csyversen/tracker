<div class="center hero-unit">
  <h2>Please sign in.</h2>
  <%= form_tag({:action => "attempt_login"}, :class => "form-signin")  do %>
  
      <%= text_field_tag "username", nil,  {:class => "input", :placeholder => "Username"} %>
      
      <%= password_field_tag "password", nil, {:class => "input", :placeholder => "Password"} %>
    
      <%= submit_tag "Log in", class: "btn btn-large btn-primary" %>
  <% end %>
  
</div>
